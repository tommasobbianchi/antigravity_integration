{
  "name": "agentforge-vscode",
  "displayName": "AgentForge Junior Developer",
  "description": "Integration with AgentForge Junior Developer via local python plugin.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agentforge.connect",
        "title": "AgentForge: Connect (Handshake)"
      },
      {
        "command": "agentforge.status",
        "title": "AgentForge: Check Status"
      },
      {
        "command": "agentforge.sendCommand",
        "title": "AgentForge: Send Action"
      },
      {
        "command": "agentforge.syncWorkspace",
        "title": "AgentForge: Sync Workspace"
      }
    ],
    "configuration": {
      "title": "AgentForge",
      "properties": {
        "agentforge.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to the python interpreter to use."
        },
        "agentforge.pluginPath": {
          "type": "string",
          "default": "../plugin.py",
          "description": "Path to the plugin.py script (relative to extension root or absolute)."
        },
        "agentforge.hubUrl": {
          "type": "string",
          "default": "",
          "description": "URL of the Hub Status API (e.g., http://100.111.236.92:5000/api/status). Leave empty to use script default."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js",
    "package": "tsc -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "@vscode/test-electron": "^2.3.8"
  }
}